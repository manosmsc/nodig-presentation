  <script>
    import { Renderer, Program, Mesh, Triangle } from 'ogl';

    // ── Εμφάνιση στοιχείων κατά το scroll ──
    const παρατηρητης = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) entry.target.classList.add('visible');
        });
      },
      { threshold: 0.08, rootMargin: '0px 0px -60px 0px' }
    );
    document.querySelectorAll('.fade-up').forEach((el) => παρατηρητης.observe(el));

    // ── Πλοήγηση: Διαφανής → Σταθερή ──
    const πλοηγηση = document.getElementById('πλοηγηση');
    const αρχικη = document.getElementById('αρχικη');

    if (πλοηγηση && αρχικη) {
      const παρατηρητηςΗρωα = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              πλοηγηση.classList.add('διαφανης');
              πλοηγηση.classList.remove('σταθερη');
            } else {
              πλοηγηση.classList.remove('διαφανης');
              πλοηγηση.classList.add('σταθερη');
            }
          });
        },
        { threshold: 0.15 }
      );
      παρατηρητηςΗρωα.observe(αρχικη);
    }

    // ── Καρουζέλ Έργων ──
    const καρουζελ = document.getElementById('καρουζελ-εργων');
    if (καρουζελ) {
      const εικονες = καρουζελ.querySelectorAll('.εικονα-slide');
      const κειμενα = καρουζελ.querySelectorAll('.κειμενο-slide');
      const τελειες = καρουζελ.querySelectorAll('.τελεια-πλοηγησης');
      const κουμπιΠροηγ = document.getElementById('κουμπι-προηγουμενο');
      const κουμπιΕπομ = document.getElementById('κουμπι-επομενο');
      const μετρητης = document.getElementById('μετρητης-slides');
      const μπαραΠροοδου = document.getElementById('μπαρα-προοδου');
      const συνολο = εικονες.length;
      let τρεχον = 0;
      let κλειδωμενο = false;
      let χρονομετρο: ReturnType<typeof setInterval>;
      const ΚΑΘΥΣΤΕΡΗΣΗ = 7000;
      const ΔΙΑΡΚΕΙΑ = 800;

      function μεταβαση(δεικτης: number) {
        if (κλειδωμενο || δεικτης === τρεχον) return;
        κλειδωμενο = true;
        const προηγ = τρεχον;
        τρεχον = δεικτης;
        εικονες[προηγ].classList.remove('active');
        εικονες[προηγ].classList.add('exit');
        εικονες[τρεχον].classList.add('active');
        κειμενα[προηγ].classList.remove('active');
        κειμενα[προηγ].classList.add('exit');
        κειμενα[τρεχον].classList.add('active');
        τελειες.forEach((d, i) => d.classList.toggle('active', i === τρεχον));
        μετρητης!.textContent = `${String(τρεχον + 1).padStart(2, '0')} — ${String(συνολο).padStart(2, '0')}`;
        επαναφοραΠροοδου();
        setTimeout(() => {
          εικονες[προηγ].classList.remove('exit');
          κειμενα[προηγ].classList.remove('exit');
          κλειδωμενο = false;
        }, ΔΙΑΡΚΕΙΑ);
      }

      function επομενο() { μεταβαση((τρεχον + 1) % συνολο); }
      function προηγουμενο() { μεταβαση((τρεχον - 1 + συνολο) % συνολο); }

      function επαναφοραΠροοδου() {
        μπαραΠροοδου!.classList.remove('γεμισμα-προοδου');
        void (μπαραΠροοδου as HTMLElement).offsetWidth;
        μπαραΠροοδου!.classList.add('γεμισμα-προοδου');
      }

      function εκκινηση() { σταματημα(); επαναφοραΠροοδου(); χρονομετρο = setInterval(επομενο, ΚΑΘΥΣΤΕΡΗΣΗ); }
      function σταματημα() { clearInterval(χρονομετρο); }

      κουμπιΕπομ!.addEventListener('click', () => { επομενο(); εκκινηση(); });
      κουμπιΠροηγ!.addEventListener('click', () => { προηγουμενο(); εκκινηση(); });
      τελειες.forEach(dot => {
        dot.addEventListener('click', () => { μεταβαση(parseInt((dot as HTMLElement).dataset.dot!)); εκκινηση(); });
      });
      καρουζελ.addEventListener('mouseenter', σταματημα);
      καρουζελ.addEventListener('mouseleave', εκκινηση);
      εκκινηση();
    }

    // ── FAQ Accordion ──
    document.querySelectorAll('[data-faq]').forEach(btn => {
      btn.addEventListener('click', () => {
        const απαντηση = btn.nextElementSibling as HTMLElement;
        const βελος = btn.querySelector('.faq-βελος');
        const ανοιχτη = απαντηση.classList.contains('ανοιχτη');

        // Κλείσιμο όλων
        document.querySelectorAll('.faq-απαντηση').forEach(a => a.classList.remove('ανοιχτη'));
        document.querySelectorAll('.faq-βελος').forEach(a => a.classList.remove('ανοιχτη'));

        // Toggle τρέχοντος
        if (!ανοιχτη) {
          απαντηση.classList.add('ανοιχτη');
          βελος?.classList.add('ανοιχτη');
        }
      });
    });

    // ── WebGL Grainient Φόντο ──
    const grainientContainer = document.getElementById('grainient-container');

    if (grainientContainer) {
      const renderer = new Renderer({ alpha: false, antialias: false });
      const gl = renderer.gl;
      grainientContainer.appendChild(gl.canvas);

      Object.assign(gl.canvas.style, {
        width: '100%', height: '100%', display: 'block',
        position: 'absolute', top: '0', left: '0',
      });

      const geometry = new Triangle(gl);

      const vertex = /* glsl */ `#version 300 es
        in vec2 position;
        in vec2 uv;
        out vec2 vUv;
        void main() {
          vUv = uv;
          gl_Position = vec4(position, 0.0, 1.0);
        }
      `;

      const fragment = /* glsl */ `#version 300 es
        precision highp float;
        uniform float uTime;
        uniform vec3 uColor1;
        uniform vec3 uColor2;
        uniform vec3 uColor3;
        uniform float uGrainAmount;
        uniform float uWarpStrength;
        uniform float uWarpFrequency;
        uniform float uContrast;
        uniform float uGamma;
        uniform float uSaturation;
        uniform float uZoom;
        uniform vec2 uResolution;
        in vec2 vUv;
        out vec4 fragColor;

        vec2 hash(vec2 p) {
          p = vec2(dot(p, vec2(127.1, 311.7)), dot(p, vec2(269.5, 183.3)));
          return -1.0 + 2.0 * fract(sin(p) * 43758.5453123);
        }

        float noise(vec2 p) {
          vec2 i = floor(p);
          vec2 f = fract(p);
          vec2 u = f * f * (3.0 - 2.0 * f);
          return mix(
            mix(dot(hash(i + vec2(0.0, 0.0)), f - vec2(0.0, 0.0)),
                dot(hash(i + vec2(1.0, 0.0)), f - vec2(1.0, 0.0)), u.x),
            mix(dot(hash(i + vec2(0.0, 1.0)), f - vec2(0.0, 1.0)),
                dot(hash(i + vec2(1.0, 1.0)), f - vec2(1.0, 1.0)), u.x),
            u.y
          );
        }

        void main() {
          vec2 uv = vUv;
          uv = (uv - 0.5) * uZoom + 0.5;
          float aspect = uResolution.x / uResolution.y;
          vec2 uvAspect = uv;
          uvAspect.x *= aspect;
          float warpX = noise(uvAspect * uWarpFrequency + uTime * 0.3);
          float warpY = noise(uvAspect * uWarpFrequency + uTime * 0.3 + 100.0);
          uv += vec2(warpX, warpY) * uWarpStrength * 0.05;
          float n1 = noise(uv * 3.0 + uTime * 0.15);
          float n2 = noise(uv * 2.0 - uTime * 0.1 + 50.0);
          float blend1 = smoothstep(-0.5, 1.5, n1 + uv.x - uv.y);
          float blend2 = smoothstep(-0.5, 1.5, n2 + uv.y);
          vec3 color = mix(uColor1, uColor2, blend1);
          color = mix(color, uColor3, blend2 * 0.6);
          float grain = (fract(sin(dot(vUv * uTime, vec2(12.9898, 78.233))) * 43758.5453) - 0.5) * uGrainAmount;
          color += grain;
          color = (color - 0.5) * uContrast + 0.5;
          color = pow(max(color, vec3(0.0)), vec3(1.0 / uGamma));
          float luma = dot(color, vec3(0.299, 0.587, 0.114));
          color = mix(vec3(luma), color, uSaturation);
          fragColor = vec4(color, 1.0);
        }
      `;

      const program = new Program(gl, {
        vertex, fragment,
        uniforms: {
          uTime: { value: 0 },
          uColor1: { value: [1.0, 0.4, 0.0] },
          uColor2: { value: [0.424, 0.478, 0.525] },
          uColor3: { value: [0.102, 0.122, 0.141] },
          uGrainAmount: { value: 0.08 },
          uWarpStrength: { value: 0.8 },
          uWarpFrequency: { value: 4.0 },
          uContrast: { value: 1.4 },
          uGamma: { value: 1.0 },
          uSaturation: { value: 1.15 },
          uZoom: { value: 0.85 },
          uResolution: { value: [window.innerWidth, window.innerHeight] },
        },
      });

      const mesh = new Mesh(gl, { geometry, program });

      const resizeObserver = new ResizeObserver(([entry]) => {
        const { width, height } = entry.contentRect;
        if (width > 0 && height > 0) {
          renderer.setSize(width, height);
          program.uniforms.uResolution.value = [width, height];
        }
      });
      resizeObserver.observe(grainientContainer);

      const ταχυτηταΧρονου = 0.15;
      function animate(t: number) {
        requestAnimationFrame(animate);
        program.uniforms.uTime.value = t * 0.001 * ταχυτηταΧρονου;
        renderer.render({ scene: mesh });
      }
      requestAnimationFrame(animate);
    }
  </script>

