<html lang="el">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>No Dig Hellas — Επισκευές Χωρίς Σκάψιμο</title>
  <style>
    html { scroll-behavior: smooth; }
    body { -webkit-font-smoothing: antialiased; }

    /* ── Εμφάνιση κατά το scroll ── */
    .fade-up {
      opacity: 0;
      transform: translateY(36px);
      transition: opacity .7s cubic-bezier(.22,1,.36,1), transform .7s cubic-bezier(.22,1,.36,1);
    }
    .fade-up.visible {
      opacity: 1;
      transform: translateY(0);
    }
    .fade-up-delay-1 { transition-delay: .1s; }
    .fade-up-delay-2 { transition-delay: .2s; }
    .fade-up-delay-3 { transition-delay: .3s; }

    /* ── Πλοήγηση (διαφανής → σταθερή) ── */
    .κινηματο-πλοηγηση {
      position: sticky;
      top: 0;
      z-index: 40;
      transition: background .5s cubic-bezier(.22,1,.36,1), border-color .5s ease, box-shadow .5s ease;
    }
    .κινηματο-πλοηγηση.διαφανης {
      background: transparent;
      border-color: transparent;
      box-shadow: none;
    }
    .κινηματο-πλοηγηση.σταθερη {
      background: rgba(26,31,36,0.92);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border-color: rgba(255,255,255,0.06);
      box-shadow: 0 4px 30px rgba(0,0,0,0.15);
    }

    /* ── Επικάλυψη ήρωα ── */
    .επικαλυψη-ηρωα {
      background: linear-gradient(to bottom, rgba(26,31,36,0.3) 0%, rgba(26,31,36,0.55) 40%, rgba(26,31,36,0.85) 100%);
    }

    /* ── Κάρτες bento ── */
    .καρτα-bento {
      transition: transform .4s ease, box-shadow .4s ease;
    }
    .καρτα-bento:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 50px rgba(0,0,0,0.06);
    }

    /* ── Κάρτες κριτικών ── */
    .καρτα-κριτικης {
      transition: transform .4s ease, box-shadow .4s ease;
    }
    .καρτα-κριτικης:hover {
      transform: translateY(-5px);
      box-shadow: 0 16px 40px rgba(0,0,0,0.08);
    }

    /* ── Καρουζέλ έργων ── */
    .εικονα-slide {
      position: absolute;
      inset: 0;
      transform: translateX(-101%) scale(0.95);
      transition: transform 0.8s cubic-bezier(0.22, 1, 0.36, 1);
      will-change: transform;
    }
    .εικονα-slide.active { transform: translateX(0) scale(1); }
    .εικονα-slide.exit { transform: translateX(101%) scale(0.95); }

    .κειμενο-slide {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      justify-content: center;
      pointer-events: none;
    }
    .κειμενο-slide.active { pointer-events: auto; }

    .στοιχειο-κειμενου {
      transform: translateY(-40px);
      opacity: 0;
      transition: transform 0.8s cubic-bezier(0.22, 1, 0.36, 1),
                  opacity 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .κειμενο-slide.active .στοιχειο-κειμενου { transform: translateY(0); opacity: 1; }
    .κειμενο-slide.active .στοιχειο-κειμενου:nth-child(1) { transition-delay: 0.1s; }
    .κειμενο-slide.active .στοιχειο-κειμενου:nth-child(2) { transition-delay: 0.2s; }
    .κειμενο-slide.active .στοιχειο-κειμενου:nth-child(3) { transition-delay: 0.35s; }
    .κειμενο-slide.active .στοιχειο-κειμενου:nth-child(4) { transition-delay: 0.5s; }
    .κειμενο-slide.exit .στοιχειο-κειμενου { transform: translateY(40px); opacity: 0; transition-delay: 0s; }

    .τελεια-πλοηγησης {
      width: 40px; height: 2px;
      background: rgba(255, 102, 0, 0.15);
      border: none; cursor: pointer; padding: 0;
      transition: background 0.5s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .τελεια-πλοηγησης.active { background: #FF6600; }

    @keyframes προοδος-καρουζελ { from { width: 0; } to { width: 100%; } }
    .γεμισμα-προοδου { animation: προοδος-καρουζελ 7s linear; }

    /* ── FAQ Accordion ── */
    .faq-απαντηση {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.3s ease;
      opacity: 0;
    }
    .faq-απαντηση.ανοιχτη {
      max-height: 300px;
      opacity: 1;
    }
    .faq-βελος {
      transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .faq-βελος.ανοιχτη {
      transform: rotate(180deg);
    }

    /* ── Βήμα διαδικασίας ── */
    .βημα-γραμμη {
      position: absolute;
      top: 24px;
      left: calc(50% + 28px);
      right: calc(-50% + 28px);
      height: 2px;
      background: linear-gradient(90deg, #FF6600, rgba(255,102,0,0.2));
    }
  </style>
</head>

