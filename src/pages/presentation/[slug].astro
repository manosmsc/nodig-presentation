const { τιτλος, υποτιτλος, επεξηγηση, τεχνολογια, διαδικασια, εργα } = Astro.props;
---

<html lang="el">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{τιτλος} — No Dig Hellas</title>
  <style>
    html { scroll-behavior: smooth; }
    body { -webkit-font-smoothing: antialiased; }
    .fade-up {
      opacity: 0; transform: translateY(36px);
      transition: opacity .7s cubic-bezier(.22,1,.36,1), transform .7s cubic-bezier(.22,1,.36,1);
    }
    .fade-up.visible { opacity: 1; transform: translateY(0); }
    .fade-up-delay-1 { transition-delay: .1s; }
    .fade-up-delay-2 { transition-delay: .2s; }
    .fade-up-delay-3 { transition-delay: .3s; }
    .βημα-γραμμη {
      position: absolute; top: 24px;
      left: calc(50% + 28px); right: calc(-50% + 28px);
      height: 2px;
      background: linear-gradient(90deg, #FF6600, rgba(255,102,0,0.2));
    }
  </style>
</head>

<body class="bg-ambient-light text-cast-iron">

  <!-- Πλοήγηση -->
  <nav class="sticky top-0 z-40 bg-cast-iron/95 backdrop-blur-xl border-b border-white/5">
    <div class="max-w-6xl mx-auto px-5 sm:px-8 py-4 flex items-center justify-between">
      <a href="/presentation/" class="flex items-center gap-3 group">
        <svg class="w-4 h-4 text-pipe-gray group-hover:text-white transition-colors group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5"/></svg>
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-brand-orange rounded-lg flex items-center justify-center">
            <span class="text-white font-black text-xs">ND</span>
          </div>
          <span class="text-white font-bold text-base tracking-tight">No Dig <span class="font-normal text-white/50">Hellas</span></span>
        </div>
      </a>
      <a href="tel:+30" class="inline-flex items-center gap-2 bg-brand-orange text-white font-semibold text-sm px-5 py-2.5 rounded-xl hover:bg-brand-orange/90 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/></svg>
        Καλέστε μας
      </a>
    </div>
  </nav>

  <!-- Hero Banner -->
  <div class="bg-cast-iron py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-5 sm:px-8">
      <div class="fade-up">
        <a href="/presentation/#υπηρεσιες" class="inline-flex items-center gap-2 text-brand-orange text-xs font-bold uppercase tracking-[0.2em] mb-4 hover:text-brand-orange/80 transition-colors">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5"/></svg>
          Υπηρεσίες
        </a>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-black text-white leading-[1.06] tracking-tight mb-4">{τιτλος}</h1>
        <p class="text-pipe-gray text-base sm:text-lg">{υποτιτλος}</p>
      </div>
    </div>
  </div>


  <!-- Επεξήγηση -->
  <section class="bg-white py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-5 sm:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16 items-start">
        <div class="fade-up">
          <p class="text-brand-orange font-bold text-xs uppercase tracking-[0.2em] mb-3">Επεξήγηση</p>
          <h2 class="text-2xl md:text-3xl font-black text-cast-iron tracking-tight mb-6">{επεξηγηση.τιτλος}</h2>
          <p class="text-pipe-gray text-sm leading-relaxed">{επεξηγηση.κειμενο}</p>
        </div>
        <div class="fade-up fade-up-delay-1">
          <div class="bg-ambient-light rounded-2xl border border-pipe-gray/10 p-8">
            <h3 class="font-bold text-cast-iron text-sm mb-5 uppercase tracking-wider">Βασικά Χαρακτηριστικά</h3>
            <ul class="space-y-4">
              {επεξηγηση.σημεια.map((σημειο: string) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5"/></svg>
                  <span class="text-cast-iron text-sm">{σημειο}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Τεχνολογία -->
  <section class="bg-ambient-light py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-5 sm:px-8">
      <div class="text-center mb-14 fade-up">
        <p class="text-brand-orange font-bold text-xs uppercase tracking-[0.2em] mb-2">Τεχνολογία</p>
        <h2 class="text-2xl md:text-3xl font-black text-cast-iron tracking-tight">{τεχνολογια.τιτλος}</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
        {τεχνολογια.στοιχεια.map((στοιχειο: { ονομα: string; περιγραφη: string }, i: number) => (
          <div class={`fade-up ${i === 1 ? 'fade-up-delay-1' : i === 2 ? 'fade-up-delay-2' : ''} bg-white rounded-2xl border border-pipe-gray/10 p-7`}>
            <div class="w-10 h-10 bg-brand-orange/10 rounded-xl flex items-center justify-center mb-5">
              <svg class="w-5 h-5 text-brand-orange" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09Z"/></svg>
            </div>
            <h3 class="font-bold text-cast-iron text-base mb-2">{στοιχειο.ονομα}</h3>
            <p class="text-pipe-gray text-sm leading-relaxed">{στοιχειο.περιγραφη}</p>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- Διαδικασία -->
  <section class="bg-cast-iron py-16 md:py-24">
    <div class="max-w-5xl mx-auto px-5 sm:px-8">
      <div class="text-center mb-14 fade-up">
        <p class="text-brand-orange font-bold text-xs uppercase tracking-[0.2em] mb-2">Η Διαδικασία</p>
        <h2 class="text-2xl md:text-3xl font-black text-white tracking-tight">Βήμα προς Βήμα</h2>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8 md:gap-5">
        {διαδικασια.map((βημα: { βημα: string; τιτλος: string; περιγραφη: string }, i: number) => (
          <div class={`relative text-center fade-up ${i === 1 ? 'fade-up-delay-1' : i === 2 ? 'fade-up-delay-2' : i === 3 ? 'fade-up-delay-3' : ''}`}>
            {i < διαδικασια.length - 1 && <div class="hidden md:block βημα-γραμμη"></div>}
            <div class={`w-12 h-12 ${i === 0 ? 'bg-brand-orange' : 'bg-white/10 border-2 border-brand-orange'} rounded-xl flex items-center justify-center mx-auto mb-5`}>
              <span class={`${i === 0 ? 'text-white' : 'text-brand-orange'} font-black text-sm`}>{βημα.βημα}</span>
            </div>
            <h3 class="text-white font-bold text-sm mb-2">{βημα.τιτλος}</h3>
            <p class="text-pipe-gray text-xs leading-relaxed max-w-[200px] mx-auto">{βημα.περιγραφη}</p>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- Προηγούμενα Έργα -->
  <section class="bg-white py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-5 sm:px-8">
      <div class="text-center mb-14 fade-up">
        <p class="text-brand-orange font-bold text-xs uppercase tracking-[0.2em] mb-2">Προηγούμενα Έργα</p>
        <h2 class="text-2xl md:text-3xl font-black text-cast-iron tracking-tight">Αποδεδειγμένα Αποτελέσματα</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
        {εργα.map((εργο: { τιτλος: string; τοποθεσια: string; μηκος: string; διαρκεια: string; περιγραφη: string }, i: number) => (
          <div class={`fade-up ${i === 1 ? 'fade-up-delay-1' : i === 2 ? 'fade-up-delay-2' : ''} bg-ambient-light rounded-2xl border border-pipe-gray/10 overflow-hidden`}>
            <div class="h-40 bg-gradient-to-br from-cast-iron/5 via-pipe-gray/10 to-brand-orange/5 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-12 h-12 mx-auto text-pipe-gray/20 mb-1" fill="none" stroke="currentColor" stroke-width="1" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909M3.75 21h16.5A2.25 2.25 0 0 0 22.5 18.75V5.25A2.25 2.25 0 0 0 20.25 3H3.75A2.25 2.25 0 0 0 1.5 5.25v13.5A2.25 2.25 0 0 0 3.75 21Z"/></svg>
                <p class="text-pipe-gray/30 text-xs">Φωτογραφία έργου</p>
              </div>
            </div>
            <div class="p-6">
              <h3 class="font-bold text-cast-iron text-base mb-2">{εργο.τιτλος}</h3>
              <p class="text-pipe-gray text-sm leading-relaxed mb-4">{εργο.περιγραφη}</p>
              <div class="flex flex-wrap gap-x-4 gap-y-2 text-xs pt-4 border-t border-pipe-gray/10">
                <div><span class="text-pipe-gray/50">Τοποθεσία</span><p class="text-cast-iron font-semibold">{εργο.τοποθεσια}</p></div>
                {εργο.μηκος !== '—' && <div><span class="text-pipe-gray/50">Μήκος</span><p class="text-cast-iron font-semibold">{εργο.μηκος}</p></div>}
                <div><span class="text-pipe-gray/50">Διάρκεια</span><p class="text-cast-iron font-semibold">{εργο.διαρκεια}</p></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>


  <!-- CTA -->
  <section class="bg-brand-orange py-16 md:py-20">
    <div class="max-w-3xl mx-auto px-5 text-center fade-up">
      <h2 class="text-2xl md:text-3xl font-black text-white tracking-tight mb-5">Θέλετε Προσφορά;</h2>
      <p class="text-white/80 text-base mb-8">Δωρεάν αξιολόγηση χωρίς δέσμευση. Επικοινωνήστε μαζί μας σήμερα.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+30" class="inline-flex items-center justify-center gap-2 bg-white text-brand-orange font-bold text-base px-8 py-4 rounded-2xl hover:bg-white/90 transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/></svg>
          Καλέστε Τώρα
        </a>
        <a href="/presentation/#επικοινωνια" class="inline-flex items-center justify-center gap-2 border-2 border-white/30 text-white font-semibold text-base px-8 py-4 rounded-2xl hover:bg-white/10 transition-all">
          Στοιχεία Επικοινωνίας
        </a>
      </div>
    </div>
  </section>


  <!-- Υποσέλιδο -->
  <footer class="bg-cast-iron py-10">
    <div class="max-w-6xl mx-auto px-5 sm:px-8 flex flex-col md:flex-row items-center justify-between gap-3">
      <p class="text-pipe-gray/60 text-xs">&copy; 2026 No Dig Hellas. Όλα τα δικαιώματα κατοχυρωμένα.</p>
      <a href="/presentation/" class="text-pipe-gray/60 text-xs hover:text-pipe-gray transition-colors">← Πίσω στην Αρχική</a>
    </div>
  </footer>

  <script>
    const observer = new IntersectionObserver(
      (entries) => { entries.forEach((e) => { if (e.isIntersecting) e.target.classList.add('visible'); }); },
      { threshold: 0.08, rootMargin: '0px 0px -60px 0px' }
    );
    document.querySelectorAll('.fade-up').forEach((el) => observer.observe(el));
  </script>

</body>
</html>
